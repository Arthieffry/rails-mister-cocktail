<%= render 'components/banner' %>
<div class="container">
  <h2>Vos cocktails préférés :</h2>
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-md-4 col-lg-3">
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card_rest">
          <% if cocktail.photo.url %>

            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo.url, height: 300, width: 400, crop: :fill %>');">
              <div class="card-category"><%= cocktail.name %></div>
              <div class="card-description">
                <p><% cocktail.doses.each do |dose| %>
                  <%= dose.ingredient.name %>,
                <% end %></p>
              </div>
            </div>

          <% else %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://lorempixel.com/300/400/abstract');">
              <div class="card-category"><%= cocktail.name %></div>
              <div class="card-description">
                <p><% cocktail.doses.each do |dose| %>
                  <%= dose.ingredient.name %>,
                <% end %></p>
              </div>
            </div>

          <% end %>

      <% end %>
        </div>
    </div>
  <% end %>
  </div>
  <%= link_to 'Add a cocktail', new_cocktail_path, class: "btn btn-primary" %>
</div>
