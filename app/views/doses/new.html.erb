<div class="container text-center">
  <%= link_to 'Back', cocktail_path(@cocktail), class: "btn btn-danger" %>
  <h1>Ajouter votre dose</h1>
    <div class="col-xs-12 col-md-offset-4 col-md-4 col-offset-4">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :ingredient_id, label: 'Ingredient', collection: Ingredient.all, class: 'form-control form-control-lg' %>
      <%= f.input :description, label: 'Description', placeholder: 'fzjebfievzifviyzefvzeiyf' %>
      <%= f.submit "Add a Dose", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
